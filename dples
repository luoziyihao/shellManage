#!/bin/bash

PROJECT_PATH="/home/ubuntu/Works/es"
WEB_PATH=${PROJECT_PATH}"/web"

# init data
cd ${WEB_PATH}
mvn db:create
mvn db:schema
mvn db:data

# deploy
DEPLOY_PROJECT_PATH=${PROJECT_PATH}
DEPLOY_PROJECT_WAR_PATH="/home/ubuntu/Works/es/web/target/es-web.war"
WAR_NAME="es"
MVN_PACKAGE_PROFILE="development"
./dp_local.sh $DEPLOY_PROJECT_PATH $DEPLOY_PROJECT_WAR_PATH $WAR_NAME $MVN_PACKAGE_PROFILE
